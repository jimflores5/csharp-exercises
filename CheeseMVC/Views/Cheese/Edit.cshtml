
@{
    ViewData["Title"] = "Edit Cheese";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Cheese "@ViewBag.editCheese.Name" (id=@ViewBag.editCheese.CheeseId).</h2>

<form method="post">

    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" id="name" type="text" value="@ViewBag.editCheese.Name" style="width:150px"/>
    </div>
    <div class="form-group">
        <label for="info"><h3>Enter cheese description here:</h3></label>
        <input class="form-control" name="info" id="info" type="text" value="@ViewBag.editCheese.Info" style="width:300px"/>
    </div>
    <div class="form-group">
        <input type="hidden" value="@ViewBag.editCheese.CheeseId" name="id" />
    </div>

    <input type="submit" value="Edit Cheese" />

</form>