@{
    Layout = null;
}

<h1>My Cheese!</h1>

@if (ViewBag.cheeses.Count == 0)
{
    <p><h2>No cheese yet.  :-(</h2></p>

}

<ul>
    @foreach (Cheese cheese in ViewBag.cheeses)
    {
        <li>@cheese.Name: <font color="brown">@cheese.Info</font></li>
    }
</ul>

<p><a asp-controller="Cheese" asp-action="Add">Add another cheese</a></p> @*The asp-x syntax relaces href="/Cheese/Add" in the <a> tag.*@
<p><a asp-controller="Cheese" asp-action="Remove">Remove a cheese</a></p>