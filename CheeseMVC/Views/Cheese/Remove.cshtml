<h1>@ViewBag.title</h1>

<p>Select the cheeses that have been consumed...</p>
<!--<p>Hold down the Ctrl (windows) / Command (Mac) button to select multiple options.</p>-->

<form method="post">
        @foreach (Cheese cheese in ViewBag.cheeses)
        {
            <input type="checkbox" name="cheeseIds" id="@cheese.CheeseId" value="@cheese.CheeseId" />
            <label for="@cheese.CheeseId">@cheese.Name</label>
            <br/>
        }
    <br /><br />
    <input type="submit" value="Eat selected cheese(s)"/>
</form>

