@{
    ViewData["Title"] = "Add Cheese";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add a cheese...</h2>

<form method="post">

    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" id="name" type="text" style="width:150px"/>
    </div>
    <div class="form-group">
        <label for="info"><h3>Enter cheese description here:</h3></label>
        <input class="form-control" name="info" id="info" type="text" style="width:300px"/>
    </div>

    <input type="submit" value="Add Cheese" />

</form>