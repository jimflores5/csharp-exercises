@{
    ViewData["Title"] = "Add Cheese";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CheeseMVC.ViewModels.AddCheeseViewModel

<style>
    .field-validation-error{
        color:red;
    }
</style>
<h2>Add a cheese...</h2>

<form asp-controller = "Cheese" asp-action = "Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" style="width:150px"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Info">Enter a description for the cheese:</label>
        <input class="form-control" asp-for="Info" style="width:300px"/>
        <span asp-validation-for="Info"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Model.CheeseTypes"></select>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Please rank the cheese (1-5):</label>
        <input class="form-control" asp-for="Rating" style="width:75px" />
        <span asp-validation-for="Rating"></span>
    </div>

    <input type="submit" value="Add Cheese" />

</form>