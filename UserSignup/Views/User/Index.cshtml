
@{
    ViewData["Title"] = "Index";
}

@model List<User>

@if (Model.Count == 0)
{
    <p><h2>No users yet.</h2></p>

}

<table class="table" style="width:750px">

    <tr>
        <th>Username</th>
        <th>E-mail</th>
    </tr>

    @foreach (User user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
        </tr>
    }
</table>

<p><a asp-controller="User" asp-action="Add">Register New User</a></p>